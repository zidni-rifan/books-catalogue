@model IEnumerable<BooksCatalogue.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Welcome To Books Catalogue</h1>
<hr>

<p class="text-center">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="row justify-content-center">
    @foreach(var item in Model)
    {  
        <div class="mt-2 mb-2 my-4 col-lg-3 col-md-4 col-sm-4 col-5">
            <div class="card shadow">
                <a asp-action="Details" asp-route-id="@item.Id">
                <div class="text-center">
                <img src="@item.CoverURL" alt="@item.Title" 
                    class="card-img-top poster-book">
                </div>
                <div class="card-body">
                    <h5 class="card-title books-title">@item.Title</h5>
                    <p class="card-subtitle mb-2 text-muted">by: @item.Author</p>
                </div>
                </a>
            </div>
        </div>
    }
</div>
